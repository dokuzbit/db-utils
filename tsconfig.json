{
  "compilerOptions": {
    // Çıkış dosyalarını belirle
    "outDir": "dist",
    "rootDir": ".",

    // JavaScript kodlarını derlemek için
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Tür dosyalarını oluştur
    "declaration": true,
    "declarationDir": "dist",

    // JavaScript dosyalarını da oluştur
    "emitDeclarationOnly": false,

    // Module çözümleme
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["client", "server"]
}
